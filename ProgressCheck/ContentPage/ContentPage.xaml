<Page x:Class="ProgressCheck.ContentPage.ContentPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ProgressCheck.ContentPage"
      xmlns:window="clr-namespace:ProgressCheck"
      mc:Ignorable="d" 
      Title="ContentPage">

    <Grid>
        <TextBlock Text="{Binding Source={x:Static window:MainWindow.AuthorizatedUser}, Path=UserRole.Name}"
                   VerticalAlignment="Center" HorizontalAlignment="Center"
                   FontSize="30" FontWeight="Black"
                   Margin="30"/>
    </Grid>
</Page>
